
CWD=$(pwd)

echo ""
echo "-------------------------"
echo -n "Install Rikj000's Freqtrade fork? (y/n) "
read INSTALL_FT

echo ""
echo "-------------------------"
echo -n "Install MoniGoMani HyperStrategy? (y/n) "
read INSTALL_GM

echo ""
echo "-------------------------"
echo -n "Install Hurry CLI? (y/n) "
read INSTALL_HU

"""
Install freqtrade fork / branch with fix
"""
if [[ $INSTALL_FT = "y" ]]
then
  echo "-------------------------"
  echo "Installing Rikj000's Freqtrade fork..."
  echo ""

  git clone -b hyperopt-show-include-non-optimized-in-json https://github.com/Rikj000/Freqtrade.git "${CWD}/temp"
  mv ./temp/* .
  rm -rf "${CWD}/temp"

  bash ./setup.sh --install
  echo " --> √ "
fi


"""
Install MGM
"""
if [[ $INSTALL_GM = "y" ]]
then
  echo "-------------------------"
  echo "Installing MoniGoMani HyperStrategy (development branch)..."
  echo ""

  git clone -b development https://github.com/Rikj000/MoniGoMani.git "${CWD}/temp"
  cp -rf ./temp/user_data/* ./user_data/
  rm -rf "${CWD}/temp"
  echo " --> √ "
fi


"""
Install hurry cli
"""
if [[ $INSTALL_HU = "y" ]]
then
  echo ""
  echo "-------------------------"
  echo "Installing Hurry CLI..."
  echo ""
  curl "https://raw.githubusercontent.com/denvers/hurry-cli/main/hurry" --output hurry

  FILE=./hurry
  if test -f "$FILE";
  then
    echo ""
    chmod +x ./hurry
    echo ""
    pip3 install art fire logger pyaml InquirerPy
    python3 ./hurry --help

    echo "-------------------------"
    echo " >> Done & have fun! << "
    echo "-------------------------"
  else
    echo " !! Failed to download hurry"
  fi
fi
